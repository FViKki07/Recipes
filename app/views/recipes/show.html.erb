<div class="container">
  <h2 class="title-lg" mb>Рецепт <%= @recipe.title %></h2>

  <p class="mt">Ингридиенты:<br>
    <p class="mr"><%= @recipe.body%></p>
  </p>
  <p class="mb-sm">Создатель: <%= @recipe.user_id%></p>

  <div class="mt">
    <%= link_to fa_icon('pencil'), edit_recipe_path(@recipe), title: "Изменить рецепт" %></p>
    <%= button_to fa_icon('trash-o'), recipe_path(@recipe), method: :delete, title: "Удалить рецепт" %>
  </div>

  <p class="mt"><%= link_to "Все рецепты",root_path%></p>
</div>