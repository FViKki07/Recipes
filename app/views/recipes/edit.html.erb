<div class="container">
<h2 class="title-lg" mb> Редактирование рецепта <%= @recipe.title %></h2>

<%= form_with model: @recipe do |form| %>
    <p class= "mt"><%= form.label :title, 'Название рецепта' %></p>
    <p><%= form.text_area :title, rows: 3, class: "form-text-area" %></p>
            
    <p class="mt"><%= form.label :body, 'Содержание рецепта' %></p>
    <p><%= form.text_area :body, rows: 5, class: "form-text-area" %></p>

    <p class ="mt-lg"><%= form.submit 'Сохранить', class: "button button-main" %></p>
<% end %>     
</div>
    