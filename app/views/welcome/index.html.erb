<div = "navbar">
        <div>
            <% if current_user.present? %>
                <div align="right" class = "mb-lg">
           
                 <%= link_to "@#{current_user.name}", user_path(id: current_user.id), class: 'button_nick' %>
                    <%= button_to 'Выйти', session_path, method: :delete, class: 'button button-user' %>
                </div>
            <% else %>
                <div align="right" class = "mb-lg">
                    <%= link_to 'Войти', new_session_path , class: 'button button-user'%>
                    <%= link_to 'Зарегистрироваться', new_user_path , class: 'button button-user '%>
                </div>
            <% end %>
        </div>    
      </div>

<div class="container">

    <h2 class="title-lg mb">Добро пожаловать на наш сайт!!<br>  
        Здесь вы найдете лучшие рецепты!!</h2>

</div>

<div class="container mt-sm">
        <h2 class="title-lg" >Все рецепты</h2>
        <% @recipes.each do |recipe| %>
            <div class="mt-sm container">
                <% if current_user.present? %>
                    <p class="mt"><%= link_to "#{recipe.title}",recipe_path(recipe.id)%></p>
                    <%= render recipe%>
                <% else %>
                    <div class="mb-sm">
                         <%= recipe.title %>
                    </div>
                    <%= render recipe%>
                <% end %>
            </div>
        <% end %>  
    </div>