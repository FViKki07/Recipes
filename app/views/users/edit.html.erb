<div class="container">
    <h2 class="title">Редактирование пользователя</h2>

    <div class="mt">
        <%= form_with model: @user, data: {turbo: false} do |form| %>
            <p class= "mt"><%= form.label :name, 'Имя' %></p>
            <p><%= form.text_field :name, class: 'form-text-field'%></p>
            
            <p class="mt"><%= form.label :login, 'Ваша почта' %></p>
            <p><%= form.text_field :login, class: 'form-text-field' %></p>

            <p class="mt-sm  text-sm">Если не хотите менять пароль - оставьте поля ниже пустыми</p>

            <p class="mt"><%= form.label :password, 'Старый пароль' %></p>
            <p><%= form.password_field :password, class: 'form-text-field' %></p>

            <p class="mt"><%= form.label :password, 'Новый пароль' %></p>
            <p><%= form.password_field :password, class: 'form-text-field' %></p>


            <p class="mt"><%= form.label :password_confirmation, 'Подтверждение нового пароля' %></p>
            <p><%= form.password_field :password_confirmation, class: 'form-text-field' %></p>


            <p class ="mt-lg mb-sm">
                <%= form.submit 'Сохранить', class: 'button button-main' %></p>
                <span class = "mt-sm text-sm"><%= link_to "Назад", :back %></span>
            </p>
        <% end %>        
    </div>

    <div class ="mt-sm text-sm">
        <%= button_to "Удалить профиль", user_path(@user),
        method: :delete,
        form: {data: {turbo_confirm: "Вы точно хотите удалить свой профиль?"}},
        class: 'text-red text-sm' %>
   </div>
</div>
